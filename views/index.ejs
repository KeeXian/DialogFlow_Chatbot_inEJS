<div class="jumbotron">
    <h1 class="display-3 text-center">Alex the Chatbot</h1>
</div>


<div>
    <form class="form-inline m-5" action='/' method='post' id='chatbox'>

        <div class="form-group row">
            <label for="userMessage" class="col-sm-4 col-form-label float-right"></label>
            <div class="col-sm-4">
              <input type="text" class="form-control" id="userMessage" placeholder="Type in your message!" name="userMessage">
            </div>
          
            <div class="col-sm-4">
              <button type="submit" class="btn btn-primary" value="submit">Send Message</button>
            </div>
          </div>
    </form>
</div>

<div class="d-flex justify-content-center">
    <div class="card text-white bg-dark">
        <div class="card-body">
            <% for (var chatlog of chatlogs) { %>
                <p class='card-text'><%= chatlog.user + " : " + chatlog.message %></p>
                <% }%>
            
        </div>
      </div>
</div>